import sys
import os

if os.getuid() != 0:
    print "This daemon must be run as root!"
    sys.exit(1)

currentdir = os.path.dirname(os.path.abspath(sys.argv[0]))
basedir = os.path.abspath(os.path.join(currentdir, '..'))

# Add the base directory to sys.path if we are running from package
# directory (i.e. without installation)
if os.path.exists(os.path.join(basedir, 'mdvpkgd')):
    sys.path.append(basedir)

import mdvpkgd.daemon
d = mdvpkgd.daemon.PackageDaemon(sys.argv)
try:
    d.start()
except KeyboardInterrupt:
    d.stop()
